/*
 * common navbar style
 */
.nav {
  height: 70px;
  background-image: linear-gradient(-180deg,#010413 1%,#030e22 73%,#06223f);
}

.nav .logo {
    display: block;
    margin: 0 0 0 30px;
    height: 70px;
    width: 186px;
    background: url(./images/ustack_logo.png);
    background-size: 186px auto;
    background-position: left;
    background-repeat: no-repeat;
}

.nav .nav-inner-r {
  float: right;
}

.nav .nav-inner-r ul {
  float: left;
  margin-top: 11px;
}

.nav .nav-inner-r li {
  float: left;
  position: relative;
}

.nav .nav-inner-r .nav-menu li {
  margin-right: 50px;
}

.nav .nav-inner-r .nav-menu li.last,
.nav .nav-inner-r .nav-menu > li:last-child {
  margin-right: 30px;
}

.nav .nav-inner-r li .dropdown-wp {
  display: none;
  position: absolute;
  top: 25px;
  left: -14px;
  width: 140px;
  font-size: 14px;
  z-index: 1001;
}

.nav .nav-inner-r li:hover .dropdown-wp {
  display: block;
}

.nav .nav-inner-r li:hover a {
  color: #fff;
}

.nav .nav-inner-r li .dropdown.arrow {
  position: relative;
  left: 15px;
  width: 0;
  height: 0;
  border-left: 9px solid transparent;
  border-right: 9px solid transparent;
  border-bottom: 9px solid rgba(0,62,73,.9);
}

.nav .nav-inner-r li ul.dropdown {
  float: none;
  margin: 0;
  padding: 12px 0;
  border-radius: 2px;
  background-color: rgba(0,62,73,.9);
  box-shadow: 0 0 8px rgba(0,0,0,.3);
}

.nav .nav-inner-r li .dropdown li {
  float: none;
  margin-right: 0;
  height: 34px;
  line-height: 34px;
  color: #98d3df;
}

.nav .nav-inner-r li .dropdown li a {
  display: block;
  padding-left: 12px;
  margin-right: 0;
  height: 34px;
  line-height: 34px;
  border-right: none;
  color: #98d3df;
}

.nav .nav-inner-r li .dropdown li a:hover {
  background-color: rgba(0,81,93,.9);
  color: #fff;
}

.nav .nav-inner-r li a {
  display: inline-block;
  height: 28px;
  line-height: 28px;
  color: #98d4df;
  font-size: 14px;
  font-weight: bold;
}

.nav .nav-inner-r li a.selected {
  color: #fff;
}

.nav .nav-inner-r li a:hover,
.nav .nav-inner-r li a:active {
  color: #fff;
}

.nav .nav-inner-r .register {
  padding-left: 20px;
  border-left: 1px solid #6cb8c4;
}

.nav .nav-inner-r .btn {
  margin-right: 20px;
  padding: 0 20px;
  height: 28px;
  line-height: 28px;
  border-radius: 2px;
  background-color: #1eb9a5;
  color: #fff;
  box-shadow: none;
  border: none;
  font-family: arial, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', '宋体', \5b8b\4f53, Tahoma, Arial, Helvetica, STHeiti;
}

.nav .nav-inner-r .btn:hover {
  background-color: #10b29d;
}

.nav .nav-inner-r .btn:active {
  background-color: #00a791;
}

.nav .nav-inner-r .login {
  margin-left: 8px;
  margin-right: 20px;
  background-color: #6cb8c4;
}

.nav .nav-inner-r .login:hover {
  background-color: #5bb1bf;
}

.nav .nav-inner-r .login:active {
  background-color: #48a9b8;
}
